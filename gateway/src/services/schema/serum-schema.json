{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "network": { "type": "string" },
    "networks": {
      "type": "object",
      "patternProperties": {
        "^..+$": {
          "type": "object",
          "properties": {
            "rpcURL": { "type": "string" }
          },
          "required": ["rpcURL"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "allowedSlippage": { "type": "string" },
    "timeToLive": { "type": "number" }
  },
  "required": [
    "network",
    "networks",
    "allowedSlippage",
    "timeToLive"
  ],
  "additionalProperties": false
}
