{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "network": { "type": "string" },
    "networks": {
      "type": "object",
      "patternProperties": {
        "^..+$": {
          "type": "object",
          "properties": {
            "rpcURL": { "type": "string" }
          },
          "required": ["rpcURL"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "markets": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": { "type": "string" },
        "blacklist": {
          "type": "array"
        },
        "whitelist": {
          "type": "array"
        }
      }
    }
  },
  "required": [
    "network",
    "networks",
    "markets"
  ],
  "additionalProperties": false
}
